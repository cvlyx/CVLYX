      <script>
        document.addEventListener('DOMContentLoaded', function() {
          // Select all elements with class 'play-icon'
          const playIcons = document.querySelectorAll('.play-icon');
          let currentAudio = null; // Variable to store the currently playing audio
    
          // Function to stop the audio after 10 seconds
          function stopAudioAfterTimeout(audioElement) {
            setTimeout(function() {
              audioElement.pause();
              audioElement.currentTime = 0; // Reset playback to start
              const playIcon = audioElement.parentNode.querySelector('.play-icon');
              playIcon.classList.remove('fa-pause-circle');
              playIcon.classList.add('fa-play-circle');
            }, 10000); // 10 seconds
          }
    
          // Add click event listener to each play icon
          playIcons.forEach(icon => {
            icon.addEventListener('click', function() {
              const audioElement = this.parentNode.querySelector('audio');
    
              // Pause any currently playing audio
              if (currentAudio && currentAudio !== audioElement) {
                currentAudio.pause();
                currentAudio.currentTime = 0;
                const currentIcon = currentAudio.parentNode.querySelector('.play-icon');
                currentIcon.classList.remove('fa-pause-circle');
                currentIcon.classList.add('fa-play-circle');
              }
    
              if (audioElement.paused) {
                audioElement.play();
                this.classList.remove('fa-play-circle');
                this.classList.add('fa-pause-circle');
                currentAudio = audioElement; // Set current audio to this element
                stopAudioAfterTimeout(audioElement); // Start timer to stop audio after 10 seconds
              } else {
                audioElement.pause();
                audioElement.currentTime = 0; // Reset playback to start
                this.classList.remove('fa-pause-circle');
                this.classList.add('fa-play-circle');
                currentAudio = null; // Reset current audio if paused
              }
            });
          });
        });
      </script>      <!-- End JavaScript -->
